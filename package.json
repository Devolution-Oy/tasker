{
  "name": "devolution-tasker",
  "version": "1.0.0",
  "private": true,
  "description": "Devolution's task handler app",
  "author": "Mikko Kurkela <mikko.kurkela@devolution.fi>",
  "license": "ISC",
  "repository": "https://github.com/Devolution-Oy/tasker.git",
  "homepage": "https://github.com/Devolution-Oy/tasker",
  "bugs": "https://github.com/Devolution-Oy/tasker/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run --port 8080 ./index.js",
    "lint": "semistandard --fix",
    "test": "jest --coverage && semistandard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "probot": "^9.5.3"
  },
  "devDependencies": {
    "fs": "0.0.1-security",
    "jest": "^24.9.0",
    "jest-expect-message": "^1.0.2",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "semistandard": "^14.2.0",
    "smee-client": "^1.1.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "semistandard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ]
  }
}
